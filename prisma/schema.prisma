generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id          Int      @id @default(autoincrement())
  type        String   @default("tiktok")
  operationId String   @unique
  done        Boolean  @default(false)
  isPosted    Boolean? @default(false)
  prompt      String
  uri         String?  @unique
  url_link    String?  @unique
  createdAt   DateTime @default(now())
}

model Prompt {
  id               Int      @id @default(autoincrement())
  prompt           String
  intro            String   @default("Génère une grand-mère française de 100 ans")
  place            String
  habit            String
  rapSpeed         String   @default("fastNervous")
  animal           String?
  rapText          String
  instrumentalFlow String   @default("nervous")
  updatedAt        DateTime @default(now()) @updatedAt
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  avatar         String   @default("https://yt3.googleusercontent.com/9qweSKfHjyIVM8X62WGaqGEYNWgslObShwJ44EmrxZ7x3aMcUddClXrOyE2c0K50gnEKyVGD2kE=s160-c-k-c0x00ffffff-no-rj")
  hashedPassword String
  role           Role     @default(MODERATOR)
  lastActiveAt   DateTime
  updatedAt      DateTime @default(now()) @updatedAt
  createdAt      DateTime @default(now())

  // Notes crées par le user
  createdNotes Note[] @relation("NoteAuthor")

  // Notes où le user est concerné
  memberOfNotes Note[] @relation("NoteMembers")
}

model Note {
  id             Int      @id @default(autoincrement())
  title          String
  authorId       Int
  author         User     @relation("NoteAuthor", fields: [authorId], references: [id])
  members        User[]   @relation("NoteMembers")
  emoji          String
  pin            Boolean
  mentionMembers Boolean  @default(true)
  content        Json
  updatedAt      DateTime @default(now()) @updatedAt
  createdAt      DateTime @default(now())
}

model YouTubeChannel {
  id String @id @default(uuid())

  // IDENTIFICATION YOUTUBE 
  channelId String @unique

  // --- INFOS D'AFFICHAGE ---
  title       String?
  description String?
  avatar      String?
  customUrl   String?

  // --- SÉCURITÉ (LE COEUR DU SYSTÈME) ---
  refreshToken String

  // --- META DONNÉES ---
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stats DailyStat[]
}

model DailyStat {
  id          String   @id @default(uuid())
  date        DateTime
  views       Int      @default(0)
  subscribers Int      @default(0)

  // Clé étrangère
  channelId String
  channel   YouTubeChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([channelId, date])
}

model TikTokAccount {
  // --- ID INTERNE ---
  id String @id @default(uuid())

  // --- ID TIKTOK (Clé unique pour l'upsert) ---
  openId String @unique

  // --- INFOS PROFIL ---
  username    String? // Le @pseudo (souvent masqué par l'API V2, on stocke le display name en fallback)
  displayName String? // Le nom affiché (ex: "10banc Officiel")
  avatarUrl   String? // L'image de profil

  // --- TOKENS (SÉCURITÉ) ---
  accessToken  String // Expire en 24h
  refreshToken String // Expire en 1 an (sauf rotation)
  expiresIn    Int // Durée de validité en secondes (souvent 86400)

  // --- STATS (Snapshots) ---
  followerCount Int @default(0)
  videoCount    Int @default(0)
  likesCount    Int @default(0) // On le met par défaut à 0, même si on ne le récupère pas tout de suite

  // --- DATES ---
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Se met à jour tout seul quand tu fais l'upsert
}

enum Role {
  MODERATOR
  ADMIN
}
