generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id          Int      @id @default(autoincrement())
  type        String   @default("tiktok")
  operationId String   @unique
  done        Boolean  @default(false)
  isPosted    Boolean? @default(false)
  prompt      String
  uri         String?  @unique
  url_link    String?  @unique
  createdAt   DateTime @default(now())
}

model Prompt {
  id               Int      @id @default(autoincrement())
  prompt           String
  intro            String   @default("Génère une grand-mère française de 100 ans")
  place            String
  habit            String
  rapSpeed         String   @default("fastNervous")
  animal           String?
  rapText          String
  instrumentalFlow String   @default("nervous")
  updatedAt        DateTime @default(now()) @updatedAt
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  avatar         String   @default("https://yt3.googleusercontent.com/9qweSKfHjyIVM8X62WGaqGEYNWgslObShwJ44EmrxZ7x3aMcUddClXrOyE2c0K50gnEKyVGD2kE=s160-c-k-c0x00ffffff-no-rj")
  hashedPassword String
  role           Role     @default(MODERATOR)
  lastActiveAt   DateTime
  updatedAt      DateTime @default(now()) @updatedAt
  createdAt      DateTime @default(now())

  // Notes crées par le user
  createdNotes Note[] @relation("NoteAuthor")

  // Notes où le user est concerné
  memberOfNotes Note[] @relation("NoteMembers")
}

model Note {
  id             Int      @id @default(autoincrement())
  title          String
  authorId       Int
  author         User     @relation("NoteAuthor", fields: [authorId], references: [id])
  members        User[]   @relation("NoteMembers")
  emoji          String
  pin            Boolean
  mentionMembers Boolean  @default(true)
  content        Json
  updatedAt      DateTime @default(now()) @updatedAt
  createdAt      DateTime @default(now())
}

enum Role {
  MODERATOR
  ADMIN
}
